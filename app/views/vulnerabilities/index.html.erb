<p style="color: green"><%= notice %></p>

<h1>Vulnerabilities
<a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newVulnModal"><i class='bi bi-plus-circle-fill'></i></a>
</h1>

<%= render 'table', vulnerabilities: @vulnerabilities, only: [:project] %>

<div class="modal fade" id="newVulnModal" tabindex="-1" aria-labelledby="newVulnModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newVulnModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with(model: Vulnerability.new) do |form| %>
      <div class="modal-body mb-2">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group mb-2">
          <%= form.label :desc %>
          <%= form.text_area :desc, class: "form-control" %>
        </div>

        <div class="form-group mb-2">
          <%= form.label :project_id %>
          <%= form.collection_select :project_id, Project.all, :id, :name, { prompt: "Select a project" }, { class: "form-control" } %>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
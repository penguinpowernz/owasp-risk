                  <%= link_to "E", edit_agent_skill_path(skill), class: "btn p-1 btn-sm btn-success" %>
                  <%= link_to "D", skill, method: :delete, data: { confirm: 'Are you sure you want to delete this skill?' }, class: "btn p-1 btn-sm btn-danger" %>

<p style="color: green"><%= notice %></p>

<h1>Threat agents</h1>

<div id="threat_agents">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Skill</th>
        <th>Size</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @threat_agents.each do |threat_agent| %>
        <tr class="table-<%= score_class_name(threat_agent.score) %>">
          <td><%= score_and_name threat_agent %></td>
          <td><%= score_and_name(threat_agent.skill) %></td>
          <td><%= score_and_name(threat_agent.size) %></td>
          <td>
            <%= link_to "Show", threat_agent %>
            <%= link_to "Edit", edit_threat_agent_path(threat_agent) %>
            <%= link_to "Delete", threat_agent, method: :delete, data: { confirm: 'Are you sure you want to delete this threat agent?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New threat agent", new_threat_agent_path %>
